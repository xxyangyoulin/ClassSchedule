<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mnnyang.gzuclassschedule">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


        <!--TODO allowBackup-->
    <application
        android:name=".app.app"
        android:allowBackup="false"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/greenTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="n">
        <activity
            android:name=".mvp.course.CourseActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".mvp.setting.SettingActivity">

        </activity>
        <activity android:name=".mvp.impt.ImptActivity">

        </activity>
        <activity
            android:name=".mvp.add.AddActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".mvp.mg.MgActivity">

        </activity>
        <activity android:name=".mvp.about.AboutActivity">

        </activity>
        <activity android:name=".mvp.conf.ConfActivity">

        </activity>
        <activity android:name=".mvp.school.SchoolActivity">

        </activity>
        <activity
            android:name=".mvp.home.HomeActivity"
            android:launchMode="singleTask"
            android:theme="@style/NoLoginTheme">

        </activity>
        <activity
            android:name=".mvp.login.SignActivity"
            android:launchMode="singleInstance"
            android:theme="@style/LoginTheme"
            android:windowSoftInputMode="stateHidden">

        </activity>


        <receiver android:name=".widget.MyWidget">
            <intent-filter>
                <action android:name="com.mnnyang.action.UPDATE_WIDGET" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.DATE_CHANGED" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.intent.action.TIME_TICK" />
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/appwidget_provider" />
        </receiver>

        <service
            android:name=".widget.UpdateService"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <service
            android:name=".widget.UpdateJobService"
            android:permission="android.permission.BIND_JOB_SERVICE" />

    </application>

</manifest>